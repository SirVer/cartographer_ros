<launch>
  <param name="/use_sim_time" value="true" />

  <!-- <include file="$(find huroco_localization)/launch/razor-pub.launch" /> -->

  <!-- <include file="$(find huroco_localization)/launch/kinect_base.launch" /> -->

  <node pkg="tf" type="static_transform_publisher" name="base_to_imu_broadcaster" args="0 0 0 0 0 0 base_footprint base 50" />

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory
              $(find cartographer_ros)/configuration_files
          -configuration_basename kinect_baxter.lua"
      output="screen">
    <remap from="points2" to="/kinect_base/depth_registered/points" />
  </node>


  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_ros)/configuration_files/demo_3d.rviz" />
  <node name="playbag" pkg="rosbag" type="play"
      args="--clock $(arg bag_filename)" />
</launch> 
